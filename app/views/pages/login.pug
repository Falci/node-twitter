extends ../layouts/default

block content
  .row
    .col-md-4.login-container
      h1 Social.Sinpapeles

        h3
          a(href="/auth/domain", class="btn btn-primary btn-lg btn-block login-btn")
            span.login-using-domain Login using your domain
            span(class="icon-container")
              i(class="fas fa-link fa-2x")

  .row.justify-content-center.text-center.stats-parent-container
    .col-md-3
      span.status-count #{tweetCount}
      h5 Tweets Created

    .col-md-3
      span.status-count #{userCount}
      h5 Unique Users

    .col-md-3
      span.status-count #{analyticsCount}
      h5 Visitors

      if (typeof errors !== 'undefined')
        .fade.in.alert.alert-block.alert-error
          a.close(data-dismiss="alert", href="javascript:void(0)") x
          ul
            each error in errors
              li = error.type
